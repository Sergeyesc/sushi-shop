function hideRegister() {
  registerModal.classList.add("hidden");
}

// –ü–æ–∫–∞–∑–∞—Ç—å —Ñ–æ—Ä–º—É –∑–∞–∫–∞–∑–∞
function showOrder() {
  if (cart.length === 0) {
    alert("–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞, –¥–æ–±–∞–≤—å—Ç–µ —Ç–æ–≤–∞—Ä—ã!");
    return;
  }
  orderModal.classList.remove("hidden");
}

// –°–∫—Ä—ã—Ç—å —Ñ–æ—Ä–º—É –∑–∞–∫–∞–∑–∞
function hideOrder() {
  orderModal.classList.add("hidden");
}

// –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π

// –ü—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
document.addEventListener("DOMContentLoaded", () => {
  renderMenu();

  // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞ –ø–æ –∫–Ω–æ–ø–∫–µ
  document.getElementById("menu-items").addEventListener("click", (e) => {
    if (e.target.classList.contains("btn-order")) {
      const id = +e.target.dataset.id;
      addToCart(id);
    }
  });

  // –û—Ç–∫—Ä—ã—Ç—å –∫–æ—Ä–∑–∏–Ω—É
  cartBtn.addEventListener("click", showCart);
  closeCartBtn.addEventListener("click", hideCart);

  // –û—Ç–∫—Ä—ã—Ç—å –∏ –∑–∞–∫—Ä—ã—Ç—å —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é
  btnRegister.addEventListener("click", showRegister);
  closeRegisterBtn.addEventListener("click", hideRegister);

  // –û—Ç–ø—Ä–∞–≤–∫–∞ —Ñ–æ—Ä–º—ã —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏ (–ø—Ä–æ—Å—Ç–æ –≤—ã–≤–æ–¥ –≤ –∫–æ–Ω—Å–æ–ª—å)
  registerForm.addEventListener("submit", (e) => {
    e.preventDefault();
    alert("–°–ø–∞—Å–∏–±–æ –∑–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é!");
    registerForm.reset();
    hideRegister();
  });

  // –û—Ç–∫—Ä—ã—Ç—å –∏ –∑–∞–∫—Ä—ã—Ç—å –æ–∫–Ω–æ –∑–∞–∫–∞–∑–∞
  btnOrder.addEventListener("click", () => {
    hideCart();
    showOrder();
  });
  closeOrderBtn.addEventListener("click", hideOrder);

  // –û—Ç–ø—Ä–∞–≤–∫–∞ —Ñ–æ—Ä–º—ã –∑–∞–∫–∞–∑–∞
  orderForm.addEventListener("submit", (e) => {
    e.preventDefault();
    alert("–ó–∞–∫–∞–∑ –ø—Ä–∏–Ω—è—Ç! –°–ø–∞—Å–∏–±–æ!");
    orderForm.reset();
    cart = [];
    updateCartUI();
    hideOrder();
  });

  // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ñ–æ—Ä–º—ã –∫–æ–Ω—Ç–∞–∫—Ç–æ–≤ (—Ç–æ–∂–µ –ø—Ä–æ—Å—Ç–æ alert)
  contactForm.addEventListener("submit", (e) => {
    e.preventDefault();
    alert("–°–ø–∞—Å–∏–±–æ –∑–∞ –∑–∞—è–≤–∫—É, –º—ã —Å–∫–æ—Ä–æ —Å–≤—è–∂–µ–º—Å—è —Å –≤–∞–º–∏!");
    contactForm.reset();
  });

  // –ü–ª–∞–≤–Ω—ã–π —Å–∫—Ä–æ–ª–ª –ø–æ –º–µ–Ω—é
  document.querySelectorAll(".nav-link").forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();
      const targetId = link.getAttribute("href").substring(1);
      scrollToSection(targetId);
    });
  });
});
–ö–∞—Ä—Ç–∏–Ω–∫–∏
–î–ª—è –∫–∞—Ä—Ç–∏–Ω–æ–∫ –Ω—É–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –æ–∫–æ–ª–æ 10-15 —Ñ–æ—Ç–æ —Å—É—à–∏ –≤ –ø–∞–ø–∫—É /images/ (–≤–º–µ—Å—Ç–æ hero-bg.jpg, sushi1.jpg, sushi2.jpg –∏ —Ç.–¥.). –ú–æ–∂–µ—à—å –≤–∑—è—Ç—å –ª—é–±—ã–µ –∏–∑ –∏–Ω—Ç–µ—Ä–Ω–µ—Ç–∞, –≥–ª–∞–≤–Ω–æ–µ ‚Äî –ø—Ä–∞–≤–∏–ª—å–Ω–æ –Ω–∞–∑–≤–∞—Ç—å –∏ –ø–æ–ª–æ–∂–∏—Ç—å –≤ –ø–∞–ø–∫—É images.

–ß—Ç–æ –¥–µ–ª–∞—Ç—å –¥–∞–ª—å—à–µ?
–°–æ–∑–¥–∞—ë—à—å –ø–∞–ø–∫—É –¥–ª—è —Å–∞–π—Ç–∞.

–í–Ω—É—Ç—Ä–∏ —Å–æ–∑–¥–∞—ë—à—å –ø–æ–¥–ø–∞–ø–∫–∏ css, js, images.

–ö–æ–ø–∏—Ä—É–µ—à—å —Ç—É–¥–∞ —Ñ–∞–π–ª—ã:

index.html ‚Äî –≤ –∫–æ—Ä–µ–Ω—å –ø–∞–ø–∫–∏ —Å–∞–π—Ç–∞

css/style.css ‚Äî –≤ –ø–∞–ø–∫—É css

js/script.js ‚Äî –≤ –ø–∞–ø–∫—É js

–ó–∞–≥—Ä—É–∂–∞–µ—à—å –∫–∞—Ä—Ç–∏–Ω–∫–∏ –≤ –ø–∞–ø–∫—É images

–û—Ç–∫—Ä—ã–≤–∞–µ—à—å index.html –≤ –±—Ä–∞—É–∑–µ—Ä–µ ‚Äî —Å–∞–π—Ç –¥–æ–ª–∂–µ–Ω –∑–∞—Ä–∞–±–æ—Ç–∞—Ç—å —Å –Ω—É–∂–Ω—ã–º —Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª–æ–º.
